#!/usr/bin/env python
''' Command Line Interface for vmgenerator '''
import argparse
from logpar.cli.avg_length_matrix import avg_length_matrix

if __name__ == "__main__":

    # Parser
    parser = argparse.ArgumentParser(description=("Computes an streamlines' "
                                                  "average length matrix "
                                                  "between regions"))

    parser.add_argument('-stream', dest='streamlines', required=True, type=str,
                        help='streamlines file')

    parser.add_argument('-label_vol', dest='labeled_volume', required=True,
                        type=str, help='Labeled volume')

    parser.add_argument('-labels', dest='labels', required=True,
                        type=str, help='Labels file')

    parser.add_argument('-outfile', dest='outfile', required=True, type=str,
                        help='outfile, csv format')

    args = parser.parse_args()

    avg_length_matrix(args.streamlines, args.labeled_volume, args.labels,
                      args.outfile)
