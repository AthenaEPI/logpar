#!/usr/bin/env python
''' Command Line Interface of cifti_merge '''
import argparse
from logpar.cli.cifti_merge import cifti_merge


if __name__ == "__main__":
    # Parser
    parser = argparse.ArgumentParser(description='Combines cifti files along \
                                                  a given direction')

    parser.add_argument('-matrices', dest='matrices', required=True,
                        nargs='+', type=str, help='matrices to merge')

    parser.add_argument('-direction', dest='direction', type=str,
                        required=True,
                        help='Direction along which to merge')

    parser.add_argument('-out', dest='outfile', type=str, required=True,
                        help='file where to write the average matrix')

    args = parser.parse_args()

    cifti_merge(args.matrices, args.direction, args.outfile)
